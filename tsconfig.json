{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist-pipeline",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src-pipeline/*"],
      "~shared/*": ["src-shared/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["dist", "src"],
  "references": [
    // there will be an error here, but it's ok
    { "path": "./tsconfig.app.json" }
  ]
}
